<div id="<%= dom_id beer %>">
  <p>
    <strong>Name:</strong>
    <%= beer.name %>
  </p>

  <p>
    <strong>Style:</strong>
    <%= beer.style %>
  </p>

  <p>
    <strong>Brewery:</strong>
    <%= beer.brewery_id %>
  </p>

  <div>
    <% if beer.ratings.empty? %>
    beer has not yet been rated!
    <% else %>
    <p>Beer has <%= pluralize(beer.ratings.count, "rating") %> with an average of <%= beer.average_rating %></p>
    <% end %>

  </div>

</div>
