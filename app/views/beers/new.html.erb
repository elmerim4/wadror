<h1>New beer</h1>

<%= form_for(@beer) do |f| %>
  Name: <%= f.text_field :name %><br>
  Style: <%= f.select :style, @styles %><br>
  Brewery: <%= f.select :brewery_id, options_from_collection_for_select(@breweries, :id, :name) %>
  
  <%= f.submit %>
<% end %>

<br>

<div>
  <%= link_to "Back to beers", beers_path %>
</div>
